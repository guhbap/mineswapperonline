# Build stage
FROM node:24-alpine AS build-stage
WORKDIR /app

ARG BUILD_MODE=production
ENV NODE_ENV=$BUILD_MODE

# Копируем только файлы зависимостей для лучшего кэширования
COPY package.json package-lock.json ./

# Устанавливаем зависимости в зависимости от режима сборки
RUN if [ "$BUILD_MODE" = "devbuild" ]; then \
      npm ci --include=dev; \
    else \
      npm ci --omit=dev; \
    fi

# Копируем исходный код
COPY . .

# Собираем приложение
RUN if [ "$BUILD_MODE" = "devbuild" ]; then \
      npm run build:dev; \
    else \
      npm run build; \
    fi

# Production stage - используем nginx вместо serve для лучшей производительности
FROM nginx:alpine AS production-stage

# Копируем собранное приложение
COPY --from=build-stage /app/dist /usr/share/nginx/html

# Копируем конфигурацию nginx для SPA (если нужна)
RUN echo 'server { \
    listen 80; \
    server_name _; \
    root /usr/share/nginx/html; \
    index index.html; \
    location / { \
        try_files $uri $uri/ /index.html; \
    } \
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ { \
        expires 1y; \
        add_header Cache-Control "public, immutable"; \
    } \
}' > /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
